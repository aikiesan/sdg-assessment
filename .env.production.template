# SDG Assessment Tool - Production Environment Configuration
# Copy this file to .env and fill in the values
# DO NOT commit .env to version control!

# ============================================================================
# Flask Configuration
# ============================================================================

# Flask environment (should be 'production' for production deployments)
FLASK_ENV=production

# Secret key for session management and CSRF protection
# Generate a strong random key using: python -c 'import secrets; print(secrets.token_urlsafe(32))'
SECRET_KEY=REPLACE_WITH_STRONG_RANDOM_SECRET_KEY

# ============================================================================
# Database Configuration
# ============================================================================

# PostgreSQL database credentials
POSTGRES_USER=sdg_user
POSTGRES_PASSWORD=REPLACE_WITH_STRONG_DATABASE_PASSWORD
POSTGRES_DB=sdg_assessment

# Full database URL (used by Flask-SQLAlchemy)
# Will be automatically constructed in docker-compose.prod.yml
# Format: postgresql://username:password@host:port/database
DATABASE_URL=postgresql://sdg_user:REPLACE_WITH_STRONG_DATABASE_PASSWORD@db:5432/sdg_assessment

# ============================================================================
# Email Configuration (for user notifications)
# ============================================================================

# SMTP server settings - adjust based on your email provider
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True

# Email credentials
MAIL_USERNAME=your-email@example.com
MAIL_PASSWORD=your-email-password-or-app-password

# Default sender email
MAIL_DEFAULT_SENDER=noreply@yourdomain.com

# ============================================================================
# Application Settings
# ============================================================================

# Application URL (used for email links, OAuth callbacks, etc.)
APP_URL=https://yourdomain.com

# Admin email (for error notifications, etc.)
ADMIN_EMAIL=admin@yourdomain.com

# ============================================================================
# Security Settings
# ============================================================================

# Session cookie settings
SESSION_COOKIE_SECURE=True
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax

# Remember me cookie duration (in days)
REMEMBER_COOKIE_DURATION=14

# ============================================================================
# Optional: External Services
# ============================================================================

# If using external storage (S3, etc.) for file uploads
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_S3_BUCKET=

# If using analytics or monitoring services
# ANALYTICS_TRACKING_ID=
# SENTRY_DSN=

# ============================================================================
# Development/Testing Overrides (leave commented in production)
# ============================================================================

# Uncomment these only for local testing with production config
# FLASK_DEBUG=False
# TESTING=False
